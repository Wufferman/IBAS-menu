@page
@model IndexModel
@using Azure.Data.Tables;
@using Azure;
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <table>
        <thead>
            <tr>
                <td>Dag</td>
                <td>Varm ret</td>
                <td>Kold ret</td>
            </tr>
        </thead>
        <tbody>
            @foreach(menu menu in IndexModel._menu)
            {
                <tr>
                    <td>@menu.Day</td>
                    <td>@menu.WarmMeal</td>
                    <td>@menu.ColdMeal</td>
                </tr>
            }
        </tbody>
    </table>

</div>
